# GoGetaJob (GGJ) Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
GGJ_NODE_ENV=development
GGJ_PORT=3000
GGJ_HOST=0.0.0.0

# Database
GGJ_DB_NAME=gogetajob
GGJ_DB_USER=ggj_user
GGJ_DB_PASSWORD=your_secure_db_password_here
GGJ_DB_HOST=localhost
GGJ_DB_PORT=5432
GGJ_DATABASE_URL=postgresql://${GGJ_DB_USER}:${GGJ_DB_PASSWORD}@${GGJ_DB_HOST}:${GGJ_DB_PORT}/${GGJ_DB_NAME}?schema=public

# JWT Secrets (Generate strong random strings for production!)
GGJ_JWT_ACCESS_SECRET=your_access_secret_at_least_32_chars_long
GGJ_JWT_REFRESH_SECRET=your_refresh_secret_at_least_32_chars_long
GGJ_JWT_ACCESS_EXPIRES_IN=15m
GGJ_JWT_REFRESH_EXPIRES_IN=7d

# Security
GGJ_BCRYPT_ROUNDS=12
GGJ_RATE_LIMIT_MAX=5
GGJ_RATE_LIMIT_WINDOW=60000

# CORS (comma-separated origins)
GGJ_CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://localhost:5173
